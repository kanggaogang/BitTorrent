{
  "version": "1.0.0-*",
  "description": "this is library about bit torrent. It's based on monotorrent. It targets .net core, .net standard libray and Universal windows platform and .net framework",
  "authors": [
    "Mark Kang"
  ],
  "copyright": "Copyright .NET Foundation. All rights reserved.",
  "packOptions": {
    "licenseUrl": "https://raw.githubusercontent.com/NuGet/NuGet.Client/dev/LICENSE.txt",
    "projectUrl": "https://github.com/Kanggaogang/System.Net.BitTorrent"
  },
  "buildOptions": {
    "allowUnsafe": true,
    "warningsAsErrors": true,
    "xmlDoc": true,
    "nowarn": [
      "CS1591",
      "CS1574",
      "CS1573"
    ],
    "languageVersion": "csharp5",
    "compile": {
      "include": [
        "../../../Shared/*.cs"
      ]
    }
  },
  "dependencies": {
    "BitTorrent": "1.0.0-*"
  },

  "frameworks": {
    "netstandard1.5": {
      "imports": "dnxcore50",
      "dependencies": {
        "NETStandard.Library": "1.6.0"
      },
      "buildOptions": {
        "define": [
          "IS_CORECLR"
        ]
      }
    },
    //"net40-client": {
    //  "buildOptions": {
    //    "define": [
    //      "IS_DESKTOP",
    //      "IS_NET40_CLIENT"
    //    ]
    //  }
    //},
    "net45": {
      "frameworkAssemblies": {
        "System.Runtime": {
          "type": "build",
          "version": "4.0.0"
        }
      },
      "buildOptions": {
        "define": [
          "IS_DESKTOP"
        ]
      }
    }
  }
}
